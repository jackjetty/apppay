<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:minHeight="45.0dip"
  xmlns:android="http://schemas.android.com/apk/res/android" 
  android:background="@color/background" 
  android:layout_marginBottom="5dip"
  >
    <TextView android:textSize="16.0dip" 
          android:id="@+id/itv_Title" 
          android:textColor="#ff343434"
          android:layout_gravity="center_vertical"  
          android:padding="3.0dip" 
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:layout_marginLeft="10.0dip" 
          android:singleLine="true" 
          android:ellipsize="end"
          
          />  
          
    
    <ImageView
            android:id="@+id/iiv_Arrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/arrow_down"
            android:scaleType="center" 
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            />
</FrameLayout>