<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@color/main_bg_color" >
   <include 
        android:id="@+id/topTitle" 
        layout="@layout/title_bar"  
     /> 
     <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:scrollbars="vertical" 
        android:layout_below="@id/topTitle">
        
         <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >
           <LinearLayout  
               android:gravity="center_vertical" 
               android:background="@drawable/settings_mid" 
               android:paddingTop="20.0dip" 
               android:paddingBottom="20.0dip" 
               android:layout_width="fill_parent" 
               android:layout_height="wrap_content"    
               android:orientation="vertical">
		         
		        <TextView 
		             android:id="@+id/tv_PayRes" 
		             android:textSize="@dimen/textSize_large"  
		             android:drawableTop="@drawable/pay_success"
		             android:background="@null"
		             android:layout_width="fill_parent" 
		             android:layout_height="wrap_content" 
		             android:layout_marginLeft="5.0dip" 
		             android:drawablePadding="5dp" 
		             android:text="充值成功"
		             android:gravity="center"
		             android:textColor="@color/text_blue"
		              /> 
		              
		        <TextView 
		             android:id="@+id/tv_PayResTip" 
		             android:textSize="@dimen/textSize_small" 
		             android:textColor="@color/value_gray"   
		             android:background="@null"
		             android:layout_width="fill_parent" 
		             android:layout_height="wrap_content" 
		             android:layout_marginLeft="5.0dip" 
		             android:layout_marginTop="5.0dip" 
		             android:text="请稍后，充值金额将在1分钟内到账！"
		             android:gravity="center" 
		              /> 
		  </LinearLayout>
		  <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/divider" />
		  
		  
		  
		  
		  
		  
           
          <LinearLayout 
               android:gravity="center_vertical"  
                android:background="@drawable/settings_mid" 
                
                android:padding="10.0dip" 
                android:layout_marginTop="@dimen/row_margin"  
                android:layout_width="fill_parent" 
                android:layout_height="@dimen/row_height" 
                >
		        <TextView 
		             
		            android:textSize="@dimen/textSize_normal" 
		            android:textColor="@color/key_gray"
		            android:paddingLeft="5.0dip" 
		            android:layout_width="90dip"
		            android:layout_height="wrap_content" 
		            android:text="交易编号" />
		        <TextView 
		            android:id="@+id/tv_DealNumber"
		              android:textSize="@dimen/textSize_normal" 
		             android:textColor="@color/value_gray"  
		             android:background="@null" 
		             android:layout_width="fill_parent"
		             android:layout_height="wrap_content"  
		             android:gravity="right"
		             android:text="21642164121651552" 
		             
                  />
		  </LinearLayout>
		  
          <LinearLayout 
               android:gravity="center_vertical"  
                android:background="@drawable/settings_mid" 
                android:padding="10.0dip"  
                android:layout_width="fill_parent" 
                android:layout_height="@dimen/row_height" 
                >
		        <TextView 
		            android:textSize="@dimen/textSize_normal" 
		            android:textColor="@color/key_gray"
		            android:paddingLeft="5.0dip" 
		            android:layout_width="90dip"
		            android:layout_height="wrap_content" 
		            android:text="一卡通卡号" />
		        <TextView 
		            android:id="@+id/tv_ICCardNum"
		            android:textSize="@dimen/textSize_normal" 
		            android:textColor="@color/value_gray"  
		            android:background="@null" 
		            android:layout_width="fill_parent"
		             android:layout_height="wrap_content" 
		             
		             android:gravity="right"
		             android:text="12645201" 
		             
                  />
		  </LinearLayout>
		  
          
          <LinearLayout 
               android:gravity="center_vertical"  
                android:background="@drawable/settings_mid" 
                android:padding="10.0dip"  
                android:layout_width="fill_parent" 
                android:layout_height="@dimen/row_height" 
                >
		        <TextView 
		            android:textSize="@dimen/textSize_normal" 
		            android:textColor="@color/key_gray"
		            android:paddingLeft="5.0dip" 
		            android:layout_width="90dip"
		            android:layout_height="wrap_content" 
		            android:text="充值对象" />
		        <TextView 
		            android:id="@+id/tv_RechargeObj"
		            android:textSize="@dimen/textSize_normal" 
		            android:textColor="@color/value_gray"  
		            android:background="@null" 
		            android:layout_width="fill_parent"
		             android:layout_height="wrap_content" 
		             
		             android:gravity="right"
		             android:text="一卡通（卡）" 
		             
                  />
		  </LinearLayout>
		  
           
          <LinearLayout 
               android:gravity="center_vertical"  
                android:background="@drawable/settings_mid" 
                android:padding="10.0dip"  
                android:layout_width="fill_parent" 
                android:layout_height="@dimen/row_height" 
                >
		        <TextView 
		            android:textSize="@dimen/textSize_normal" 
		            android:textColor="@color/key_gray"
		            android:paddingLeft="5.0dip" 
		            android:layout_width="90dip"
		            android:layout_height="wrap_content" 
		            android:text="充值金额" />
		        <TextView 
		            android:id="@+id/tv_Amount"
		            android:textSize="@dimen/textSize_normal" 
		            android:textColor="@color/value_gray"  
		            android:background="@null" 
		            android:layout_width="fill_parent"
		             android:layout_height="wrap_content"  
		             android:gravity="right"
		             android:text="10.00元" 
		             
                  />
		  </LinearLayout>
           <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/divider" />
            
		  
           
           
		  
           
            
            
           
           <Button
                android:id="@+id/btn_Confirm"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="30dip"
                android:background="@drawable/btn_submit"
                android:shadowColor="#7f000000"
                android:shadowDx="0.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:text="确定"
                android:textColor="#ffffff"
                android:textSize="18sp" 
                android:enabled="true"/>
           
           
           <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >  
                <TextView
                    android:id="@+id/tv_ResInstruction"
                    android:paddingLeft="3dip"
                    android:textSize="14dip" 
                    android:textColor="@color/value_gray"
                    android:text="说明：\n         新充值的校园一卡通需要到校园充值处刷卡"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" /> 
            </LinearLayout>
		   
         </LinearLayout>
    </ScrollView> 
</RelativeLayout>