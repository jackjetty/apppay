<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@color/main_bg_color" >
   <include 
        android:id="@+id/topTitle" 
        layout="@layout/title_bar"  
     /> 
     <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:scrollbars="vertical" 
        android:layout_below="@id/topTitle">
        
         <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" 
            android:paddingBottom="20dip">
           <LinearLayout  
               android:gravity="center_vertical" 
               android:background="@drawable/settings_mid" 
               android:paddingTop="10.0dip" 
               android:paddingBottom="10.0dip" 
               android:layout_width="fill_parent" 
               android:layout_height="@dimen/row_height"    >
		         
		        <TextView 
		               android:textSize="@dimen/textSize_large"
		               android:textColor="@color/key_gray"
		               android:paddingLeft="5.0dip"
		               android:layout_width="80dp" 
		               android:layout_height="wrap_content" 
		               android:text="缴费项目" />
		        
		        <TextView 
		            android:id="@+id/tv_ApplyTitle" 
		            android:textSize="@dimen/textSize_normal" 
		            android:textColor="@color/value_gray"  
		            android:background="@null" 
		            android:layout_width="fill_parent" 
		            android:layout_height="wrap_content" 
		            android:layout_marginLeft="10.0dip" 
		            android:gravity="left"
		            android:text="全国英语四级考试"  
		            android:paddingRight="5.0dip"
		            android:singleLine="true"  android:ellipsize="end" 
		              /> 
		  </LinearLayout>
		  
		   
		   
		   
		  <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/divider" />
		  
		  
		  <TextView  
		            android:textSize="@dimen/textSize_small" 
		            android:textColor="@color/value_gray"  
		            android:background="@null" 
		            android:layout_width="fill_parent" 
		            android:layout_height="wrap_content" 
		            android:layout_marginLeft="10.0dip" 
		            android:gravity="left" 
		            android:text="请输入补充项"  
		            android:padding="5.0dip"
		              /> 
		              
		  <FrameLayout  
               android:gravity="center_vertical" 
               
               android:background="@drawable/settings_mid" 
               android:paddingTop="10.0dip" 
               android:paddingBottom="10.0dip" 
               android:layout_width="fill_parent" 
               android:layout_height="@dimen/row_height"     >
		         
		        <TextView  
		               android:id="@+id/tv_SkuLabel" 
		               android:layout_gravity="center_vertical"
		               android:textSize="@dimen/textSize_large"
		               android:textColor="@color/key_gray"
		               android:paddingLeft="5.0dip"
		               android:layout_width="80dp" 
		               android:layout_height="wrap_content" 
		               android:text="考试等级" />
		        
		        <EditText  
		            android:id="@+id/et_SkuName" 
		            android:textSize="@dimen/textSize_normal" 
		            android:textColorHint="@color/list_text_small_color"   
		            android:textColor="@color/value_gray"  
		            android:background="@null" 
		            android:layout_width="fill_parent" 
		            android:layout_height="wrap_content" 
		            android:layout_marginLeft="100.0dip" 
		            android:gravity="left"
		            android:layout_gravity="center_vertical"
		            android:editable="false" 
		            android:paddingRight="5.0dip"
		            android:hint="请选择输入"
		              /> 
		           <ImageView 
		            android:layout_width="25dp"
		            android:layout_height="25dp"
		            android:src="@drawable/arrow_down"
		            android:scaleType="center" 
		            android:layout_gravity="right|center_vertical"
		            android:layout_marginRight="10dp"
		            />
		  </FrameLayout>
		  <LinearLayout  
               android:gravity="center_vertical" 
               android:background="@drawable/settings_mid" 
               android:paddingTop="10.0dip" 
               android:paddingBottom="10.0dip" 
               android:layout_width="fill_parent" 
               android:layout_height="@dimen/row_height"     >
		         
		        <TextView  
		               android:textSize="@dimen/textSize_large"
		               android:textColor="@color/key_gray"
		               android:paddingLeft="5.0dip"
		               android:layout_width="80dp" 
		               android:layout_height="wrap_content" 
		               android:text="缴费金额" />
		        
		        <TextView  
		            android:id="@+id/tv_ApplyAmount" 
		            android:textSize="@dimen/textSize_normal" 
		            android:textColor="@color/value_gray"  
		            android:background="@null" 
		            android:layout_width="fill_parent" 
		            android:layout_height="wrap_content" 
		            android:layout_marginLeft="10.0dip" 
		            android:gravity="left"
		            android:text="200.00元"  
		            android:paddingRight="5.0dip"
		              /> 
		  </LinearLayout>
		  <LinearLayout  
               android:gravity="center_vertical" 
               android:background="@drawable/settings_mid" 
               android:paddingTop="10.0dip" 
               android:paddingBottom="10.0dip" 
               android:layout_width="fill_parent" 
               android:layout_height="@dimen/row_height"     >
		         
		        <TextView 
		               android:textSize="@dimen/textSize_large"
		               android:textColor="@color/key_gray"
		               android:paddingLeft="5.0dip"
		               android:layout_width="80dp" 
		               android:layout_height="wrap_content" 
		               android:text="缴费号" />
		        
		        <EditText  
		            android:id="@+id/et_PayNum" 
		            android:textSize="@dimen/textSize_normal" 
		            android:textColorHint="@color/value_gray"  
		            android:background="@null" 
		            android:layout_width="fill_parent" 
		            android:layout_height="wrap_content" 
		            android:layout_marginLeft="10.0dip" 
		            android:gravity="left"
		            android:hint="请输入缴费号"  
		            android:paddingRight="5.0dip"
		            android:maxLength="25"
		            android:singleLine="true"
		              /> 
		  </LinearLayout>
		  <LinearLayout  
               android:gravity="center_vertical" 
               android:background="@drawable/settings_mid" 
               android:paddingTop="10.0dip" 
               android:paddingBottom="10.0dip" 
               android:layout_width="fill_parent" 
               android:layout_height="@dimen/row_height"    >
		         
		        <TextView 
		               android:textSize="@dimen/textSize_large"
		               android:textColor="@color/key_gray"
		               android:paddingLeft="5.0dip"
		               android:layout_width="80dp" 
		               android:layout_height="wrap_content" 
		               android:text="姓名" />
		        
		        <EditText
		            android:id="@+id/et_UserName"  
		            android:textSize="@dimen/textSize_normal" 
		            android:textColorHint="@color/value_gray"  
		            android:background="@null" 
		            android:layout_width="fill_parent" 
		            android:layout_height="wrap_content" 
		            android:layout_marginLeft="10.0dip" 
		            android:gravity="left"
		            android:hint="请输入报名人姓名"  
		            android:paddingRight="5.0dip"
		            android:singleLine="true"
		            android:maxLength="15"
		              /> 
		  </LinearLayout>
           
          <LinearLayout 
                android:id="@+id/ll_Other1" 
                android:gravity="center_vertical"  
                android:background="@drawable/settings_mid" 
                android:paddingTop="10.0dip" 
                android:paddingBottom="10.0dip"  
                android:layout_width="fill_parent" 
                android:layout_height="@dimen/row_height" 
                >
		        <TextView 
		            android:id="@+id/tv_LabelOther1" 
		            android:textSize="@dimen/textSize_normal" 
		            android:textColor="@color/key_gray"
		            android:paddingLeft="5.0dip" 
		            android:layout_width="80dip"
		            android:layout_height="wrap_content" 
		            android:text="其他一" />
		        <EditText 
		            android:id="@+id/et_ValueOther1"
		            android:textSize="@dimen/textSize_normal" 
		            android:textColorHint="@color/value_gray"  
		            android:background="@null" 
		            android:layout_width="fill_parent"
		             android:layout_height="fill_parent" 
		             android:layout_marginLeft="10.0dip" 
		             android:gravity="center_vertical" 
		             android:hint="请输入" 
		             android:singleLine="true"
		             android:maxLength="25"
		             
                  />
		  </LinearLayout>
           <LinearLayout 
                android:id="@+id/ll_Other2" 
                android:gravity="center_vertical"  
                android:background="@drawable/settings_mid" 
                android:paddingTop="10.0dip" 
                android:paddingBottom="10.0dip"  
                android:layout_width="fill_parent" 
                android:layout_height="@dimen/row_height" 
                >
		        <TextView  
		            android:id="@+id/tv_LabelOther2" 
		            android:textSize="@dimen/textSize_normal" 
		            android:textColor="@color/key_gray"
		            android:paddingLeft="5.0dip" 
		            android:layout_width="80dip"
		            android:layout_height="wrap_content" 
		            android:text="其他二" />
		        <EditText  
		            android:id="@+id/et_ValueOther2"
		            android:textSize="@dimen/textSize_normal" 
		            android:textColorHint="@color/value_gray"  
		            android:background="@null" 
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent" 
		            android:layout_marginLeft="10.0dip" 
		            android:gravity="center_vertical" 
		            android:hint="请输入" 
		            android:maxLength="25"
		            android:singleLine="true"
		             
                  />
		  </LinearLayout>
          <LinearLayout 
               android:gravity="center_vertical"  
                android:background="@drawable/settings_mid" 
                android:paddingTop="10.0dip" 
                android:paddingBottom="10.0dip"  
                android:layout_width="fill_parent" 
                android:layout_height="@dimen/row_height" 
                >
		        <TextView 
		            android:textSize="@dimen/textSize_normal" 
		            android:textColor="@color/key_gray"
		            android:paddingLeft="5.0dip" 
		            android:layout_width="80dip"
		            android:layout_height="wrap_content" 
		            android:text="备注说明" />
		        <EditText 
		            android:id="@+id/et_Remark"
		            android:textSize="@dimen/textSize_normal" 
		            android:textColorHint="@color/value_gray"  
		            android:background="@null" 
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent" 
		            android:layout_marginLeft="10.0dip"  
		            android:gravity="center_vertical" 
		            android:hint="请输入备注信息"
		            android:maxLength="35"
		            android:singleLine="true"
		             
                  />
		  </LinearLayout>
           <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/divider" /> 
            
           
           <Button
                android:id="@+id/btn_Apply"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/btn_submit"
                android:shadowColor="#7f000000"
                android:shadowDx="0.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:text="缴费"
                android:textColor="#ffffff"
                android:textSize="18sp" 
                android:enabled="true"/>
		   
         </LinearLayout>
    </ScrollView> 
</RelativeLayout>