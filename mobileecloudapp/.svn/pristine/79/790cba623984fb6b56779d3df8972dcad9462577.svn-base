<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_CONTENT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical" 
        android:background="@color/table_background" >

            <RelativeLayout
               
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/row_selector" >

                 

                <RelativeLayout 
                    android:id="@+id/rl_Top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="@dimen/row_padding_left"
                    android:layout_marginTop="10dip"
                     >

                    <TextView
                        android:id="@+id/itv_ApplyTitle" 
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_large" 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="全国英语四级考试大纲" 
                        android:ellipsize="end"
                        android:singleLine="true"/>

                     
                </RelativeLayout>
                
                <LinearLayout 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content" 
			        android:orientation="horizontal"
			        android:padding="@dimen/content_padding"
			        android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@id/rl_Top" >
                    
                    <TextView
                    android:id="@+id/itv_UserName" 
                    android:textSize="@dimen/textSize_small" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:text="卡号:哗啦啦"
                    />
                    
                    <TextView
                        android:id="@+id/itv_DealTime" 
                        android:textSize="@dimen/textSize_small" 
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" 
                        android:layout_gravity="center_vertical" 
                        android:gravity="center"
                        android:text="3月5日 13:35"
                        android:textColor="@color/gray"
                        android:ellipsize="end"
                        android:singleLine="true" />
                    
                    
               </LinearLayout>     
                
               <TextView 
                    android:id="@+id/itv_Flag"
                    android:textSize="@dimen/textSize_small" 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                     android:layout_alignParentRight="true"
                     android:layout_centerInParent="true"
                   android:drawablePadding="5dp" 
                   android:gravity="center_vertical"
                   android:text="成功"
                   android:textColor="@color/gray"
                    android:drawableRight="@drawable/arrow_go"/>
                
            </RelativeLayout>
</LinearLayout>
 