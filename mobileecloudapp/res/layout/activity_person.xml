<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@color/main_bg_color" >
   <include 
        android:id="@+id/topTitle" 
        layout="@layout/title_bar"  
     /> 
     <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:scrollbars="vertical" 
        android:layout_below="@id/topTitle">
        
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >
           <LinearLayout  
               android:gravity="center_vertical" 
               android:background="@drawable/settings_mid" 
               android:paddingTop="10.0dip" 
               android:paddingBottom="10.0dip" 
               android:layout_width="fill_parent" 
               android:layout_height="@dimen/row_height"   
               android:layout_marginTop="20.0dip" >
		         
		        <TextView 
		               android:textSize="@dimen/textSize_large"
		               android:textColor="@color/key_gray"
		               android:paddingLeft="5.0dip"
		               android:layout_width="wrap_content" 
		               android:layout_height="wrap_content" 
		               android:text="帐号" />
		        
		        <TextView 
		            android:textSize="@dimen/textSize_normal" 
		            android:textColor="@color/value_gray" 
		            android:id="@+id/tv_UserId" 
		            android:background="@null" 
		            android:layout_width="fill_parent" 
		            android:layout_height="wrap_content" 
		            android:layout_marginLeft="10.0dip" 
		            android:gravity="right"  
		            android:paddingRight="5.0dip"
		              /> 
		  </LinearLayout>
		  
           
           <LinearLayout  
               android:gravity="center_vertical" 
               android:background="@drawable/settings_mid" 
               android:paddingTop="10.0dip" 
               android:paddingBottom="10.0dip" 
               android:layout_width="fill_parent" 
               android:layout_height="@dimen/row_height" >
		         
		        <TextView 
		               android:textSize="@dimen/textSize_large"
		               android:textColor="@color/key_gray"
		               android:paddingLeft="5.0dip"
		               android:layout_width="wrap_content" 
		               android:layout_height="wrap_content" 
		               android:text="姓名" />
		        
		        <TextView 
		            android:textSize="@dimen/textSize_normal" 
		            android:textColor="@color/value_gray" 
		            android:id="@+id/tv_UserName" 
		            android:background="@null" 
		            android:layout_width="fill_parent" 
		            android:layout_height="wrap_content" 
		            android:layout_marginLeft="10.0dip" 
		            android:gravity="right"  
		            android:paddingRight="5.0dip"
		            android:text="张三"  /> 
		  </LinearLayout> 
		  
          <LinearLayout  
               android:gravity="center_vertical" 
               android:background="@drawable/settings_mid" 
               android:paddingTop="10.0dip" 
               android:paddingBottom="10.0dip" 
               android:layout_width="fill_parent" 
               android:layout_height="@dimen/row_height"    >
		         
		        <TextView 
		               android:textSize="@dimen/textSize_large"
		               android:textColor="@color/key_gray"
		               android:paddingLeft="5.0dip"
		               android:layout_width="wrap_content" 
		               android:layout_height="wrap_content" 
		               android:text="身份证号" />
		        
		        <TextView 
		            android:textSize="@dimen/textSize_normal" 
		            android:textColor="@color/value_gray" 
		            android:id="@+id/tv_IDNum" 
		            android:background="@null" 
		            android:layout_width="fill_parent" 
		            android:layout_height="wrap_content" 
		            android:layout_marginLeft="10.0dip" 
		            android:gravity="right"  
		            android:paddingRight="5.0dip"
		             /> 
		  </LinearLayout>  
           
          <LinearLayout  
               android:gravity="center_vertical" 
               android:background="@drawable/settings_mid" 
               android:paddingTop="10.0dip" 
               android:paddingBottom="10.0dip" 
               android:layout_width="fill_parent" 
               android:layout_height="@dimen/row_height"    >
		         
		        <TextView 
		               android:textSize="@dimen/textSize_large"
		               android:textColor="@color/key_gray"
		               android:paddingLeft="5.0dip"
		               android:layout_width="wrap_content" 
		               android:layout_height="wrap_content" 
		               android:text="用户类别" />
		        
		        <TextView 
		            android:textSize="@dimen/textSize_normal" 
		            android:textColor="@color/value_gray" 
		            android:id="@+id/tv_UserKind" 
		            android:background="@null" 
		            android:layout_width="fill_parent" 
		            android:layout_height="wrap_content" 
		            android:layout_marginLeft="10.0dip" 
		            android:gravity="right"  
		            android:paddingRight="5.0dip"
		              /> 
		  </LinearLayout>   
		  
          
          <LinearLayout  
               android:id="@+id/ll_PhoneNumber" 
               android:gravity="center_vertical" 
               android:background="@drawable/settings_mid" 
               android:paddingTop="10.0dip" 
               android:paddingBottom="10.0dip" 
               android:layout_width="fill_parent" 
               android:layout_height="@dimen/row_height"    >
		         
		        <TextView 
		               android:textSize="@dimen/textSize_large"
		               android:textColor="@color/key_gray"
		               android:paddingLeft="5.0dip"
		               android:layout_width="wrap_content" 
		               android:layout_height="wrap_content" 
		               android:text="绑定手机" />
		        
		        <TextView 
		            android:textSize="@dimen/textSize_normal" 
		            android:textColor="@color/value_gray" 
		            android:id="@+id/tv_PhoneNumber" 
		            android:background="@null" 
		            android:layout_weight="1.0"
		            android:layout_height="wrap_content" 
		            android:layout_width="wrap_content" 
		            android:layout_marginLeft="10.0dip"   
		            android:gravity="right"  
		           
		              /> 
		              
		         <ImageView 
                    android:id="@+id/iv_PNEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" 
                    android:src="@drawable/icon_edit"
                    android:layout_marginLeft="5.0dip" 
                    android:layout_marginRight="5.0dip" 
                    android:gravity="right"   />
		  </LinearLayout> 
		  
          
           <LinearLayout  
               android:gravity="center_vertical" 
               android:background="@drawable/settings_bottom" 
               android:paddingTop="10.0dip" 
               android:paddingBottom="10.0dip" 
               android:layout_width="fill_parent" 
               android:layout_height="@dimen/row_height"    >
		         
		        <TextView 
		               android:textSize="@dimen/textSize_large"
		               android:textColor="@color/key_gray"
		               android:paddingLeft="5.0dip"
		               android:layout_width="wrap_content" 
		               android:layout_height="wrap_content" 
		               android:text="性别" />
		        
		        
		          
		         <RadioGroup 
			            android:id="@+id/rg_UserSex" 
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content" 
			            android:layout_weight="1" 
			            android:orientation="horizontal"  
			            android:gravity="right" 
			            android:layout_marginRight="5dp" 
			            > 
		        <RadioButton  
		            android:id="@+id/rb_Male"
		            style="@style/custom_checkbox_style"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" 
		            android:text="男" 
		            android:checked="true" 
		            android:button="@null"
		            android:paddingLeft="5dp"
					android:drawableLeft="@drawable/cust_radio_box_bg" 
		            android:textSize="@dimen/textSize_normal" 
		            android:drawablePadding="5dip"
		            android:textColor="@color/value_gray"   />
		        
		        <RadioButton
		            android:id="@+id/rb_Female"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:paddingLeft="5dp"
		            android:button="@null"
		            android:drawableLeft="@drawable/cust_radio_box_bg"
		            android:drawablePadding="5dip"
		            android:text="女"
		            android:textColor="@color/value_gray"
		            android:textSize="@dimen/textSize_normal" />
		        
		        </RadioGroup>
		  </LinearLayout> 
          
            
           
           
		  
           
            
		  
          
		  
           
          
            
           
           <Button
                android:id="@+id/btn_Exit"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="30dip"
                android:background="@drawable/btn_exit"
                android:shadowColor="#7f000000"
                android:shadowDx="0.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:text="退出登录"
                android:textColor="#ffffff"
                android:textSize="18sp" 
                android:enabled="true"/>
		   
         </LinearLayout>
    </ScrollView> 
</RelativeLayout>