<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/fynn_prompt_dialog_bg_normal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fynn_prompt_dialog_title_bar_bg_skyblue"
        android:gravity="left|center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" 
            android:text="一卡通充值确认"/>
    </LinearLayout>

    <View
        android:id="@+id/title_msg_divider"
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:layout_marginBottom="20dp"
        android:background="#DCDCDC"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/layout_addview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="15.0dp"
        android:layout_marginRight="15.0dp"
        android:gravity="center"
        android:orientation="vertical" >
        
        <LinearLayout 
                android:gravity="center"   
                android:padding="8.0dip"  
                 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                >
		        <TextView  
		            android:textSize="@dimen/textSize_large" 
		            android:textColor="@color/key_gray"
		            android:paddingLeft="5.0dip" 
		            android:layout_width="80dip"
		            android:layout_height="wrap_content" 
		            android:text="姓    名" />
		        <TextView 
		            android:id="@+id/tv_AccountName"
		            android:textSize="@dimen/textSize_large" 
		            android:textColor="#696969"
		            android:background="@null" 
		            android:layout_width="fill_parent"
	                android:layout_height="wrap_content" 
	                android:layout_marginLeft="8.0dip" 
	                android:gravity="center"
	                android:text="张三" 
		              
                  />
		  </LinearLayout>
		  <LinearLayout 
                android:gravity="center"   
                android:padding="8.0dip"  
                 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                >
		        <TextView  
		            android:textSize="@dimen/textSize_large" 
		            android:textColor="@color/key_gray"
		            android:paddingLeft="5.0dip" 
		            android:layout_width="80dip"
		            android:layout_height="wrap_content" 
		            android:text="充值卡号" />
		        <TextView 
		            android:id="@+id/tv_ICCardNum"
		            android:textSize="@dimen/textSize_large" 
		            android:textColor="#696969"
		            android:background="@null" 
		            android:layout_width="fill_parent"
	                android:layout_height="wrap_content" 
	                android:layout_marginLeft="8.0dip" 
	                android:gravity="center"
	                android:text="216451" 
		              
                  />
		  </LinearLayout>
          <LinearLayout 
                android:gravity="center"   
                android:padding="8.0dip"   
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                >
		        <TextView  
		            android:textSize="@dimen/textSize_large" 
		            android:textColor="@color/key_gray"
		            android:paddingLeft="5.0dip" 
		            android:layout_width="80dip"
		            android:layout_height="wrap_content" 
		            android:text="充值金额" />
		        <TextView 
		            android:id="@+id/tv_ParName"
		            android:textSize="@dimen/textSize_large" 
		            android:textColor="#696969"
		            android:background="@null" 
		            android:layout_width="fill_parent"
	                android:layout_height="wrap_content" 
	                android:layout_marginLeft="8.0dip" 
	                android:gravity="center"
	                android:text="50元" 
		              
                  />
		  </LinearLayout>
          <LinearLayout 
                android:gravity="center"   
                android:padding="8.0dip"   
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                >
		        <TextView  
		            android:textSize="@dimen/textSize_large" 
		            android:textColor="@color/key_gray"
		            android:paddingLeft="5.0dip" 
		            android:layout_width="80dip"
		            android:layout_height="wrap_content" 
		            android:text="充值对象" />
		        <TextView 
		            android:id="@+id/tv_ChargeObj"
		            android:textSize="14sp" 
		            android:textColor="#696969"
		            android:background="@null" 
		            android:layout_width="fill_parent"
	                android:layout_height="wrap_content" 
	                android:layout_marginLeft="8.0dip" 
	                android:gravity="center"
	                android:text="一卡通（手机）" 
		              
                  />
		  </LinearLayout>
    </LinearLayout>

    

    

    <View
        android:id="@+id/msg_btn_divider"
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:background="#DCDCDC"
          />

    <LinearLayout
        android:id="@+id/btn_view"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/button_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fynn_prompt_dialog_btn_left_selector"
            android:clickable="true"
            android:gravity="center"
            android:textColor="#808080"
            android:textSize="18sp"
            android:text="取消"
             />

        <View
            android:id="@+id/btn_divider"
            android:layout_width="1.0px"
            android:layout_height="wrap_content"
            android:background="#DCDCDC"
             /> 
        <TextView
            android:id="@+id/button_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fynn_prompt_dialog_btn_right_selector"
            android:clickable="true"
            android:gravity="center"
            android:textColor="#808080"
            android:textSize="18sp"
            android:text="确认"
             />
    </LinearLayout>

</LinearLayout>