<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/main_bg_color" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/title_bar" />
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
           
            <RelativeLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="200dip"
		        android:layout_marginLeft="10.0dip"
		        android:layout_marginRight="10.0dip"
		        android:layout_marginTop="10dip"
		        android:background="@drawable/settings_single" 
		        style="@style/corner_margin_style"
		         >
    
				    <EditText
				            android:id="@+id/et_Content"
				            android:layout_width="fill_parent"
				            android:layout_height="200dip"
				            android:hint="@string/feed_back_hint"  
				            android:maxLength="500"
				            android:gravity="top|left|center"
				            android:background="#00ffffff"                                      
				            android:paddingLeft="12.0dip"
				            android:textColor="#808080"
				            android:textColorHint="#ff666666"
				            android:padding="10dip"
				            android:textSize="@dimen/textSize_normal"
				            />
				    
				          <TextView 
				               android:id="@+id/tv_Num"
				               android:layout_width="wrap_content" 
				        		android:layout_height="wrap_content" 
				        		android:text="500"
				                android:layout_alignParentRight="true"
				                android:layout_alignParentBottom="true"
				                android:layout_marginBottom="10dip"
				                android:layout_marginRight="10dip"
				                android:gravity="center"
				        		android:textSize="@dimen/textSize_tab"   		     		        		
								android:textColorHint="@color/gray"
				       			android:textColor="@color/black"
				       
				       />
				    
				    
				  </RelativeLayout>  
            
            
            <FrameLayout 
                android:layout_marginTop="10dip" 
                android:gravity="center_vertical" 
                android:background="@drawable/settings_down_select"
                 android:paddingTop="10.0dip" 
                 android:paddingBottom="10.0dip" 
                  android:layout_width="fill_parent"
                   android:layout_height="wrap_content" 
                   style="@style/corner_margin_style">
                
                <EditText 
                    android:textSize="@dimen/textSize_normal" 
                    android:textColorHint="@color/list_text_small_color" 
                    android:id="@+id/et_Location" 
                    android:background="@null" 
                    android:layout_width="wrap_content"
                    
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="10.0dip" 
                    android:hint="@string/feed_back_location_hint"   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:paddingRight="5.0dip"
                    android:text="@string/feed_back_option_hint"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/textSize_normal" />

            </FrameLayout>
             
             
        
        </LinearLayout>
    </ScrollView>
</LinearLayout>